# Caddyfile para Yape Notifier
# Maneja HTTPS autom√°tico con Let's Encrypt

# API - api.notificaciones.space
api.notificaciones.space {
    # Reverse proxy a Nginx
    reverse_proxy nginx:80 {
        # Headers para Laravel
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
        header_up Host {host}
        
        # Health check
        health_uri /up
        health_interval 30s
        health_timeout 5s
    }

    # Logging
    log {
        output file /var/log/caddy/api.log
        format json
    }

    # Compression
    encode gzip zstd
}

# Panel/Dashboard (opcional) - panel.notificaciones.space
