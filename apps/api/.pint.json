{
    "preset": "laravel",
    "rules": {
        "array_syntax": {
            "syntax": "short"
        },
        "ordered_imports": {
            "sort_algorithm": "alpha"
        },
        "concat_space": {
            "spacing": "one"
        }
    },
    "exclude": [
        "bootstrap",
        "storage",
        "vendor"
    ]
}









