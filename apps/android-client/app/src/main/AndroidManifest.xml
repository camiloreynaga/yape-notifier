<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".YapeNotifierApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.YapeNotifier"
        tools:targetApi="31">

        <!-- Login Activity (No longer the launcher) -->
        <activity
            android:name=".ui.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.YapeNotifier" />

        <!-- Register Activity -->
        <activity
            android:name=".ui.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.YapeNotifier" />

        <!-- Main Activity (New Launcher for Testing) -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.YapeNotifier">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Captured Notifications Activity (Debug) -->
        <activity
            android:name=".ui.CapturedNotificationsActivity"
            android:exported="false"
            android:label="Notificaciones Guardadas"
            android:theme="@style/Theme.YapeNotifier" />

        <!-- Link Device Activity -->
        <activity
            android:name=".ui.LinkDeviceActivity"
            android:exported="false"
            android:label="Vincular Dispositivo"
            android:theme="@style/Theme.YapeNotifier" />

        <!-- App Instances Activity -->
        <activity
            android:name=".ui.AppInstancesActivity"
            android:exported="false"
            android:label="Instancias de Aplicaciones"
            android:theme="@style/Theme.YapeNotifier" />

        <!-- Notification Listener Service -->
        <service
            android:name=".service.PaymentNotificationListenerService"
            android:exported="true"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>

    </application>

</manifest>
