# ============================================
# Yape Notifier - Variables de Entorno para Staging
# ============================================
# Copia este archivo a .env.staging y configura los valores reales
# cp .env.staging.example .env.staging
# nano .env.staging

# ============================================
# Base de Datos PostgreSQL
# ============================================
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=yape_notifier_staging
DB_USERNAME=postgres
DB_PASSWORD=TU_CONTRASEÑA_SEGURA_AQUI

# ============================================
# Aplicación Laravel
# ============================================
APP_NAME="Yape Notifier API (Staging)"
APP_ENV=staging
APP_DEBUG=true
APP_KEY=
APP_URL=http://localhost:8080
APP_TIMEZONE=UTC

# ============================================
# Sesiones y Cache
# ============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
CACHE_DRIVER=file
QUEUE_CONNECTION=database

# ============================================
# Logs
# ============================================
LOG_CHANNEL=stderr
LOG_LEVEL=debug

# ============================================
# Dashboard
# ============================================
DASHBOARD_API_URL=http://localhost:8080

# ============================================
# CORS
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:8080
