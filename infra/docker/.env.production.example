# ============================================
# Yape Notifier - Variables de Entorno para Producción
# ============================================
# Copia este archivo a .env.production y configura los valores reales
# cp .env.production.example .env.production
# nano .env.production

# ============================================
# Base de Datos PostgreSQL
# ============================================
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=yape_notifier
DB_USERNAME=postgres
DB_PASSWORD=TU_CONTRASEÑA_SEGURA_AQUI

# ============================================
# Aplicación Laravel
# ============================================
APP_NAME="Yape Notifier API"
APP_ENV=production
APP_DEBUG=false
APP_KEY=
APP_URL=https://api.notificaciones.space
APP_TIMEZONE=UTC

# ============================================
# Sesiones y Cache
# ============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
CACHE_DRIVER=file
QUEUE_CONNECTION=database

# ============================================
# Logs
# ============================================
LOG_CHANNEL=stderr
LOG_LEVEL=error

# ============================================
# Dashboard
# ============================================
DASHBOARD_API_URL=https://api.notificaciones.space

# ============================================
# CORS
# ============================================
CORS_ALLOWED_ORIGINS=https://dashboard.notificaciones.space
