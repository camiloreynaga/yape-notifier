# ============================================
# Production Docker Compose - Con Docker Secrets
# ============================================
# Ejemplo de uso profesional de secretos
# 
# Para usar:
# 1. Crear secretos: docker secret create db_password <(echo "tu_password_seguro")
# 2. Usar: docker stack deploy -c docker-compose.secrets.yml yape-notifier
#
# NOTA: Docker Secrets solo funciona con Docker Swarm
# Para Docker Compose estándar, usar variables de entorno del sistema
# ============================================

version: '3.8'

services:
  db:
    image: postgres:15-alpine
    secrets:
      - db_password
    environment:
      POSTGRES_PASSWORD_FILE: /run/secrets/db_password
    # ... resto de configuración

secrets:
  db_password:
    external: true

